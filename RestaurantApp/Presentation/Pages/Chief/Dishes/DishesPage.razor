@page "/chief/dishes"

@inject IDishService DishService

<style>
    .dishes-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .dish-container {
        width: calc(33.333% - 10px);
        display: flex;
        align-items: center;
        justify-content: center;

        flex-direction: column;
        align-items: center;
        gap: 10px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
    }

    .dish-picture {
        width: 100%;
        margin: 10px;
        background-color: blue;
        height: 100px;
    }

    .dish-title {
        width: 100%;
        align-items: start;
    }
</style>

<MudLink Href="/chief/dishes/create" >
    Add new dish
</MudLink>

<div class="dishes-container">
    @foreach(var dish in Dishes)
    {
        <MudPaper class="dish-container">
            <div class="dish-picture">

            </div>

            <div class="dish-title">
                <h1><MudLink Href="/chief/dishes/1">@dish.Name</MudLink></h1>

            </div>
        </MudPaper>
    }
</div>

