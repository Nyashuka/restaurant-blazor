<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Створення категорії
        </MudText>
    </TitleContent>

    <DialogContent>
        <MudTextField Label="Назва" @bind-Value="CreatingDto.Name" />
        <MudCheckBox @bind-Value="CreatingDto.IsShared" Label="Розподіляється" Color="Color.Primary"></MudCheckBox>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Save" Color="Color.Primary">Зберегти</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Відмінити</MudButton>
    </DialogActions>

</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private DrinkCategoryCreatingDto CreatingDto = new();

    private void Save() => MudDialog.Close(DialogResult.Ok(CreatingDto));

    private void Cancel() => MudDialog.Cancel();
}