                }
                <MudText>
                    –ü–æ–¥—ñ—è: @OrderForApprove.EventType.Name
                </MudText>
                <MudText>
                    –ö—ñ–ª—å–∫—ñ—Å—Ç—å –≥–æ—Å—Ç–µ–π: @OrderForApprove.PeopleCount
                </MudText>
                <MudText>
                    –ó–∞–≥–∞–ª—å–Ω–∞ –≤–∞—Ä—Ç—ñ—Å—Ç—å –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è: @OrderForApprove.Cost UAH
                </MudText>
            </MudStack>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Ok" Color="Color.Error">–ü—ñ–¥—Ç–≤–µ—Ä–¥–∏—Ç–∏</MudButton>
        <MudButton OnClick="Cancel" >–ó–∞–∫—Ä–∏—Ç–∏</MudButton>
    </DialogActions>

</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter]
    public Order OrderForApprove { get; set; }

    [Parameter]
    public List<Order> CrossingOrders { get; set; }

    private void Ok() => MudDialog.Close();

    private void Cancel() => MudDialog.Cancel();
}