                    <MudText Typo="Typo.h5">
                        @orderDay.Date.ToString($"dd.MM.yyyy")
                    </MudText>
                    @foreach(var orderMenuItem in orderDay.OrderMenuItems)
                    {
                            <MudText>
                                @orderMenuItem.FoodItem.Name (@orderMenuItem.Count —à—Ç. x @orderMenuItem.FoodItem.PricePerUnit UAH) - @(orderMenuItem.Count * orderMenuItem.FoodItem.PricePerUnit) UAH
