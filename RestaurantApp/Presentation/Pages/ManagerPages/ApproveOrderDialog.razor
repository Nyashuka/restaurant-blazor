                {
                    <MudStack Row="true">
                        <MudText Typo="Typo.subtitle2" Color="Color.Error">
                            ‚Ññ@order.Id
                        </MudText>
                        <MudText Typo="Typo.subtitle2" >
                            -  @order.Cost UAH
                        </MudText>
                    </MudStack>
