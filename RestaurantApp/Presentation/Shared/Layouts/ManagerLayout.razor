<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
        OnClick="@((e) => DrawerToggle())" />
    <MudSpacer />
    <MudLink Href="Logout">
        <MudButton>
            Вийти
        </MudButton>
    </MudLink>
</MudAppBar>
<MudDrawer @bind-Open="_drawerOpen" Elevation="2" Style="margin-top: -16px;">
    <MudDrawerHeader>
        <MudText Typo="Typo.h5" Class="mt-1">Кабінет Менеджера</MudText>
    </MudDrawerHeader>
    <ManagerNavMenu/>
</MudDrawer>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}